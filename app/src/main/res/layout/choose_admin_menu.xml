<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AdminMainMenuActivity">

    <TextView
        android:id="@+id/textViewPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose one of the menus"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gridLayoutButtons"
        android:layout_marginBottom="5dp" />

    <GridLayout
        android:id="@+id/gridLayoutButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPrompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/buttonFlightMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Flight Menu"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/buttonAirplaneMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Airplane Menu"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/buttonStaffMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Staff Menu"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/buttonCustomerMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif"
            android:text="Customer Menu"
            android:textSize="12sp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
